<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/btTag"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/bt_tag"/>

    <TextView
        android:id="@+id/blueDevice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btTag"
        android:layout_marginLeft="10dp"
        android:text="DeviceName"
        android:textColor="#7B68EE"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/blueDevice_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="DeviceRssi"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/blueDevice_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/blueDevice_name"
        android:layout_below="@+id/blueDevice_name"
        android:text="DeviceAddress"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/btn_connect"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_below="@+id/blueDevice_rssi"
        android:layout_marginTop="3dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/connect"
        android:text=" connect"
        android:textSize="16sp"/>



</RelativeLayout>